{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "outDir": ".tmp/build/",
        "sourceMap": true,
        "declaration": true,
        "strict": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "files": [
        "src/visual.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}